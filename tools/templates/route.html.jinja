      <div class="container-fluid">
        <h1 class="mt-4">Multi-target optimization &mdash; Route overview</h1>
        <h2>Route {{ num_id }}</h2>
		<p style="text-align: center;"><a href="./img/route_{{ num_id }}.png"><img src="./img/route_{{ num_id }}.png" style="max-width: 100%; max-height: 600px;"></a><br>Click to expand</p>

		<h2>Individual steps</h2>

		<table class="table table-striped" style="table-layout: fixed; word-wrap: break-word;">
			<thead>
				<tr>
					<th scope="col" style="width: 10%;">Node ID</th>
					<th scope="col" style="width: 40%;">Image</th>
					<th scope="col" style="width: 40%;">Smiles</th>
					<th scope="col" style="width: 10%;">Other steps</th>
				</tr>
			</thead>
			<tbody>
			{% for s in steps %}
				<tr>
					<td class="text-center">{{ s.id }}</td>
					<td><img src="./img/{{ s.image }}" alt="Image not found" title="{{ s.smiles }}"></dt>
					<td>{{ s.smiles }}</dt>
					<td class="text-center">
						{% if s.outgoing is gt(0) %}
							Used in {{ s.outgoing }} other steps.
						{% endif %}
					</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
